@model IEnumerable<StreamsManage.Models.StreamerModel>
<div class="card">
  <div class="card-header">Meus streamers</div>
  <div class="card-body">
          <input class="form-control" id="myInput" type="text" placeholder="Pesquisar">

              <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Link)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Plataforma)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="mytable">
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plataforma)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>

  </div>
  <div class="card-footer">
          <a asp-action="Create"><i class="fa fa-plus"></i> </a>

  </div>
</div>


<script src="~/js/filter.js" ></script>


