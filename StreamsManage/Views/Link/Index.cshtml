@model IEnumerable<StreamsManage.Models.LinkModel>

@{
    ViewData["Title"] = "Meus Links";
}




<div class="card">
  <div class="card-header">Meus links</div>
  <div class="card-body">
    <input class="form-control" id="myInput" type="text" placeholder="Search..">
    <br>

      <table class="table table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>Link</th>
                <th colspan="2">Ações</th>
            </tr>
        </thead>
        <tbody id="myTable">
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.titulo)
                </td>
                <td>
                        <button type="submit" class="btn btn-info" > <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil"></i></a> </button>
               </td>
               <td>
                                    <form asp-action="Delete">
                    <input type="hidden"  id="id" name="id" value="@item.Id"  />
                    <button type="submit" class="btn btn-danger" > <i class="fa fa-trash"></i></button>
                </form>
                </td>
            </tr>
    }
        </tbody>
    </table>
  </div>
  <div class="card-footer">
      <a href="Link/create"><i class="fa fa-plus"></i></a>
  </div>
</div>
